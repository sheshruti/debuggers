  .carousel-inner img {
    width: 100%;
    height: 100%;
  }
  .row{
    flex-wrap: wrap;
    display: flex;
    margin-left: -15px;
    margin-right: -15px;
  }
  .counts .counters span {
    font-size: 48px;
    display: block;
    color: #ffc107;
    font-weight: 700;
  }
  .counts .counters p {
    padding: 0;
    margin: 0 0 20px 0;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 15px;
    font-weight: 600;
    color: #37423b;
   }

  .head{
    background-color: #ffc107;
    border-radius: 5px;
    margin-top: -40px;
    padding-top: 15px;
    padding-bottom: 7px;
    font-family: Arial, Helvetica, sans-serif;
  }
  .Effect-1{
    border: 0;
    outline: none;
    width: 100%;
    padding: 7px 0;
    
    border-bottom: 1px solid #ccc;
  }
  .Effect-1 ~ .Focus-border{
    position:absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background-color: #ffc107;
    transition: 0.4s;
  }
  .Effect-1:focus ~ .Focus-border{
    width: 100%;
    transition: 0.4s;
    left: 0;
  }
  
  

</style>
